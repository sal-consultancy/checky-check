{
    "identities": {
        "ssd01": {
            "user": "ansible",
            "key": "/Users/sjoerd/id_ansible_rsa_host_ssdnodes"
        },
        "as": {
            "user": "root",
            "key": "/Users/sjoerd/id_rsa_root_automatesap",
            "passphrase": "${env.as_passphrase}"
        },
        "mm": {
            "user": "mm",
            "password":"${env.mm_password}"
        }
    },
    "host_defaults": {
        "identity": "ssd01",
        "host_vars": {
            "sap_sid": "ssh",
            "vulling": "20",
            "echo_var": "20"
        },
        "hhost_checks":[
            "check_uptime"
        ],
        "host_checks":[
            "check_uptime",
            "check_firewall_running",
            "echo_var",
            "diskspace" 
        ]
    },
    "host_templates":{
        "sap_host_v1": {
            "host_vars": {
                "sap_type": "webdisp",
                "sap_sid": "aaa"
            },
            "host_checks": [
                "show_os"

            ]
        },
        "mm_host_v1": {
            "host_checks": [
                "sleep40"
                        ]
        }
    },
    "checks": {
        "sleep40": {
            "title":"Sleeping",
            "description":"Controleer of er een variabele gezet wordt in deze app",
            "command": "sleep 40",
            "timeout":"5s",
            "graph": {
                "title":"Uptime per server",
                "type": "bar_grouped_by_value"
               },
            "fail_when": ">",
            "fail_value": "100"
        },
        "check_uptime": {
            "title":"Uptime",
            "description":"Controleer of er een variabele gezet wordt in deze app",
            "command": "uptime | awk '{print $3}'",
            "timeout":"5s",

            "graph": {
                "title":"Uptime per server",
                "type": "bar_grouped_by_value",
                "sshow": false,
                "llegend": true,
                "ccolors": { "failed": [ "blue" ], "passed": [ "green" ] }
            },
            "fail_when": ">",
            "fail_value": "100"
        },        
        "check_firewall_running": {
            "title":"Linux Firewall",
            "description":"Controleer of er een variabele gezet wordt in deze app",
            "graph": {
                "title":"Variabele",
                "type": "pie_grouped_by_value",
                "show": true,
                "legend": false,
                "colors": { "failed": [ "red" ], "passed": [ "green" ] }
            },
            "timeout":"5s",
            "repeat": "* 7-19 * * *", 
            "service": "ufw",
            "fail_when": "=",
            "fail_value": "0"
        },
        "show_os":{
            "title": "Linux version",
            "description": "Controleert of een URL bereikbaar is door de HTTP-statuscode te verifiÃ«ren.",
            "graph": {
                "title": "Aantal per os.",
                "type": "bar_grouped_by_value"
            },
            "command": "cat \/etc\/os-release | grep PRETTY_NAME | cut -d \"=\" -f 2 ",
            "fail_when": "==",
            "fail_value": "nolinux"
        },
        "diskspace":{
            "title": "SAP Diskspace",
            "description": "Toont de diskspace van een specifieke disk..",
            "graph": {
                "title": "Aantal per % vulling.",
                "type": "bar_grouped_by_10_percentile"
            },
            "command": "echo ${vulling}",
            "fail_when": ">",
            "fail_value": "50",
            "local": false
        },
        "echo_var":{
            "title": "Echo var",
            "description": "Toont de variabele echo_var",
            "graph": {
                "title": "Aantal van echo_var.",
                "type": "bar_grouped_by_value"
            },
            "command": "echo ${echo_var}",
            "fail_when": ">",
            "fail_value": "50",
            "local": false,
            "timeout":"10s"

        }
    },
    "host_groups":{
        "sap_feo": {
            "host_vars": {
                "sap_sid": "feo"
            },
            "hosts": {
                "feo1.apps.salconsultancy.com": {
                    "host_template": "sap_host_v1",
                    "host_vars": {
                        "vulling":"53",
                        "echo_var": "53"
                    }
                },
                "feo2.apps.salconsultancy.com": {
                    "host_template": "sap_host_v1",
                    "host_vars": {
                        "vulling":"33",
                        "echo_var": "33"
                    }
                }
            }
        },
        "sap_fea": {
            "host_vars": {
                "sap_sid": "fea",
                "vulling":"76",
                "echo_var": "76"
            },
            "hosts": {
                "fea1.apps.salconsultancy.com": {
                    "host_template": "sap_host_v1"
                },
                "fea2.tooling.automatesap.com": {
                    "host_template": "sap_host_v1",
                    "identity": "as"
                },
                "fea3.apps.salconsultancy.com": {
                    "host_template": "sap_host_v1"
                }
            }
        },
        "mm": {
            "host_vars": {
                "sap_sid": "mm"
            },
            "hosts": {
                "192.168.68.135": {
                    "host_template": "mm_host_v1",
                    "identity": "mm",
                    "host_vars": {
                        "vulling":"33",
                        "echo_var": "33"
                    }
                }
            }
        }
    },
    "report": {
        "title":"Checky Check DEV",
        "subtitle": "Macbook Pro monitoring",
        "desription": "Description text",
        "copyright": "Alle rechten voorbehouden, lala inc.",
        "css": "h1 { size: 10rem }"
        
    }
}